#include <bits/stdc++.h>

using namespace std;

int main() {
	int cases;
	cin >> cases;		
	while(cases--)
	{
		int p1,p2,n,s1=0,s2=0;
		cin>>p1>>p2>>n;
		for(int i=0;i<n;i++)
		{
			int temp1,temp2;
			cin>>temp1>>temp2;
			s1+=temp1;
			s2+=temp2;
		}
		cout<<max(s1,s2)*min(p1,p2)+max(p1,p2)*min(s1,s2)<<endl;
	}
	//cout << "Input number is " << num << endl;		
}
